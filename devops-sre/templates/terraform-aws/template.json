{
  "name": "terraform-aws",
  "description": "AWS infrastructure with Terraform modules",
  "stack": {
    "provider": "AWS",
    "iac": "Terraform",
    "state": "S3 + DynamoDB"
  },
  "dependencies": {
    "terraform": ">=1.5.0",
    "aws-provider": "~>5.0"
  },
  "structure": [
    "modules/",
    "modules/vpc/",
    "modules/ecs/",
    "modules/rds/",
    "environments/",
    "environments/dev/",
    "environments/prod/",
    "main.tf",
    "variables.tf",
    "outputs.tf",
    "versions.tf",
    "backend.tf"
  ],
  "features": {
    "modules": ["VPC", "ECS Fargate", "RDS", "S3", "CloudFront"],
    "security": "Security groups, IAM roles, KMS",
    "networking": "Public/private subnets, NAT Gateway"
  }
}
