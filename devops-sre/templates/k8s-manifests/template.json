{
  "name": "k8s-manifests",
  "description": "Kubernetes deployment manifests with best practices",
  "stack": {
    "orchestrator": "Kubernetes",
    "package": "Kustomize or Helm",
    "registry": "Any container registry"
  },
  "structure": [
    "base/",
    "base/deployment.yaml",
    "base/service.yaml",
    "base/configmap.yaml",
    "base/kustomization.yaml",
    "overlays/",
    "overlays/dev/",
    "overlays/prod/",
    "helm/",
    "helm/Chart.yaml",
    "helm/values.yaml",
    "helm/templates/"
  ],
  "features": {
    "resources": ["Deployment", "Service", "ConfigMap", "Secret", "Ingress"],
    "security": "Pod security context, network policies",
    "observability": "Prometheus annotations, health checks"
  }
}
